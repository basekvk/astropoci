---
import { ViewTransitions } from "astro:transitions";
import Topbarheader from "../components/topheader.astro";
import Header from "../components/header.astro";
import Footer from "../components/footer.astro";
import { SEO } from "astro-seo";
import { Analytics } from "@vercel/analytics/react";

const { titleSEO, descriptionMeta, canonical } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <!-- Metatags básicos -->
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="author" content="Pocería Pociten" />

    <link rel="shortcut icon" href="/favicon.ico" />
    <ViewTransitions />
    <!-- Título de la página -->
    <SEO
      title={titleSEO}
      description={descriptionMeta}
      canonical={canonical ? canonical : null}
      openGraph={{
        basic: {
          title: "Poceros en Madrid 24 horas",
          type: "Service",
          image: "https://poceros-madrid.es/assets/img/approch1.jpg",
        },
      }}
      twitter={{
        creator: "@pociten",
      }}
      extend={{
        // extending the default link tags
        link: [{ rel: "icon", href: "/favicon.ico" }],
        // extending the default meta tags
        meta: [
          {
            name: "twitter:image",
            content: "https://poceros-madrid.es/assets/img/approch1.jpg",
          },
          { name: "twitter:title", content: "Pocería Pociten" },
          {
            name: "twitter:description",
            content:
              "Empresa de pocería, desatascos de tuberías y alcantarillado en Madrid.",
          },
        ],
      }}
    />

    <!-- Preloading critical CSS files -->
    <link rel="preload" href="/assets/css/bootstrap.min.css" as="style" />
    <link rel="stylesheet" href="/assets/css/bootstrap.min.css" />
    <link rel="preload" href="/assets/css/style.css" as="style" />
    <link rel="stylesheet" href="/assets/css/style.css" />

    <!-- Otros archivos CSS -->
    <link rel="stylesheet" href="/assets/css/icons.css" />
    <link rel="stylesheet" href="/assets/css/animate.css" />
    <link rel="stylesheet" href="/assets/css/magnific-popup.css" />
    <link rel="stylesheet" href="/assets/css/owl.carousel.min.css" />
    <link rel="stylesheet" href="/assets/css/metismenu.css" />
    <link rel="stylesheet" href="/assets/css/owl.theme.css" />
  </head>

  <body class="body-wrapper">
    <Analytics client:idle />
    <Topbarheader />
    <Header />
    <slot />
    <Footer />

    <!-- Deferred JavaScript -->
    <script src="/assets/js/jquery.min.js" is:inline ></script>
    <script src="/assets/js/modernizr.min.js" is:inline></script>
    <script src="/assets/js/jquery.easing.js" is:inline></script>
    <script src="/assets/js/popper.min.js" is:inline></script>
    <script src="/assets/js/bootstrap.min.js" is:inline></script>
    <script src="/assets/js/isotope.pkgd.min.js" is:inline></script>
    <script src="/assets/js/imageload.min.js" is:inline></script>
    <script src="/assets/js/scrollUp.min.js" is:inline></script>
    <script src="/assets/js/owl.carousel.min.js" is:inline></script>
    <script src="/assets/js/magnific-popup.min.js" is:inline></script>
    <script src="/assets/js/counterup.min.js" is:inline></script>
    <script src="/assets/js/wow.min.js" is:inline></script>
    <script src="/assets/js/metismenu.js" is:inline></script>
    <script src="/assets/js/timeline.min.js" is:inline></script>
    <script src="/assets/js/ajax-mail.js" is:inline></script>
    <script src="/assets/js/active.js" is:inline></script>
  </body>
</html>
